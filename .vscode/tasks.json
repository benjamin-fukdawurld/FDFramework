{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "create build dir",
            "type": "shell",
            "command": "mkdir",
            "options": {
                "cwd": "${workspaceFolder}/FDCore"
            },
            "args": [
                "-p",
                "build"
            ]
        },
        {
            "label": "configure build",
            "type": "shell",
            "command": "cmake",
            "options": {
                "cwd": "${workspaceFolder}/FDCore/build"
            },
            "args": [
                "-DCMAKE_C_COMPILER=${workspaceRoot}/../thirdparty/llvm/build/bin/clang",
                "-DCMAKE_CXX_COMPILER=${workspaceRoot}/../thirdparty/llvm/build/bin/clang++",
                ".."
            ],
            "dependsOn": [
                "create build dir"
            ]
        },
        {
            "label": "build FDCore",
            "type": "shell",
            "command": "cmake",
            "options": {
                "cwd": "${workspaceFolder}/FDCore/build"
            },
            "args": [
                "--build",
                ".",
                "-j12"
            ],
            "dependsOn": [
                "configure build"
            ]
        },
        {
            "label": "Build",
            "dependsOn": [
                "build FDCore"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "install FDCore",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/FDCore/build"
            },
            "args": [
                "install"
            ],
            "dependsOn": [
                "install FDCore"
            ]
        }
    ]
}