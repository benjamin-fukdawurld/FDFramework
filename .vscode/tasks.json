{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "create build directory",
            "type": "shell",
            "command": "mkdir",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "-p",
                "build"
            ]
        },
        {
            "label": "configure build",
            "type": "shell",
            "command": "cmake",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "args": [
                "-DCMAKE_C_COMPILER=${workspaceRoot}/thirdparty/llvm/build/bin/clang",
                "-DCMAKE_CXX_COMPILER=${workspaceRoot}/thirdparty/llvm/build/bin/clang++",
                "-DTHIRDPARTY_DIR:PATH=${workspaceRoot}/thirdparty",
                "-DTHIRDPARTY_BOOST_DIR:PATH=${workspaceRoot}/thirdparty/boost",
                "-DTHIRDPARTY_GTEST_DIR:PATH=${workspaceRoot}/thirdparty/googletest",
                ".."
            ],
            "dependsOn": [
                "create build directory"
            ]
        },
        {
            "label": "build FDCore",
            "type": "shell",
            "command": "cmake",
            "options": {
                "cwd": "${workspaceFolder}/build/FDCore"
            },
            "args": [
                "--build",
                ".",
                "-j12"
            ],
            "dependsOn": [
                "configure build"
            ]
        },
        {
            "label": "build FDFramework",
            "type": "shell",
            "command": "cmake",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "args": [
                "--build",
                ".",
                "-j12"
            ],
            "dependsOn": [
                "configure build"
            ]
        },
        {
            "label": "Build",
            "dependsOn": [
                "build FDFramework"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "install FDCore",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/build/FDCore"
            },
            "args": [
                "install"
            ],
            "dependsOn": [
                "build FDCore"
            ]
        },
        {
            "label": "install FDFramework",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "args": [
                "install"
            ],
            "dependsOn": [
                "Build"
            ]
        }
    ]
}